generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "sqlite"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String //@db.Text
  created_at   DateTime @default(now())
  name         String? //@db.Text
  access_level Int      @default(0)
  phone        String?

  @@map("users")
}

model BusinessUnit {
  id   String @id @default(uuid())
  name String

  @@map("business_units")
}
